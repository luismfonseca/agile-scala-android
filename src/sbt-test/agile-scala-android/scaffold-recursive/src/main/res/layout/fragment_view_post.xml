<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_margin="@dimen/default_layout_margin"
        android:padding="@dimen/default_padding"
        android:background="@android:color/white"
        tools:context="pt.testing.whaa.ui.post.PostFragment">

            <TextView
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryText"
                android:text="Date"/>
            <TextView
                android:id="@+id/post_date"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="fill_horizontal"
                android:text=""/>
            <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryText"
                android:text="Title"/>
            <TextView
                android:id="@+id/post_title"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="fill_horizontal"
                android:text=""/>
            <TextView
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryText"
                android:text="Content"/>
            <TextView
                android:id="@+id/post_content"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="fill_horizontal"
                android:text=""/>

    </GridLayout>

    <AbsoluteLayout
        style="@style/CardBottomBar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:text="Author:"
        />
    <FrameLayout
        android:id="@+id/post_author_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:text="Coments:"
        />
    <FrameLayout
        android:id="@+id/post_coments_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/post_add_to_coments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Add a new Comment"/>

</LinearLayout>